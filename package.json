{
  "name": "monprof",
  "version": "1.0.0",
  "description": "Monitor Profiles Switcher for KDE Plasma (Wayland)",
  "main": "dist/apps/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:ui\" \"npm:dev:electron\"",
    "dev:ui": "vite --host",
    "dev:electron": "electronmon dist/apps/electron/main.js",
    "build": "tsc && vite build && electron-builder",
    "build:ts": "tsc -p apps/electron/tsconfig.json && tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "postinstall": "node scripts/postinstall-electron.js"
  },
  "keywords": [
    "kde",
    "wayland",
    "monitor",
    "profiles",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@types/node": "^20.11.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^1.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electronmon": "^2.0.3",
    "postcss": "^8.4.35",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.16",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "dbus-next": "^0.2.1",
    "lucide-react": "^0.552.0"
  }
}
